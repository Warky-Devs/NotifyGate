# NotifyGate Environment Configuration

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=120
SERVER_GRACEFUL_STOP=30

# Database Configuration
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notifygate.db
DB_USERNAME=
DB_PASSWORD=
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# For PostgreSQL, use these instead:
# DB_DRIVER=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=notifygate
# DB_USERNAME=notifygate_user
# DB_PASSWORD=your_password
# DB_SSL_MODE=disable

# OAuth2 Configuration
# Google OAuth2 (required for Google login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/callback/google
GOOGLE_SCOPES=email,profile

# GitHub OAuth2 (required for GitHub login)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/auth/callback/github
GITHUB_SCOPES=user:email

# Security Configuration (REQUIRED)
# Generate a secure random string for JWT_SECRET (32+ characters recommended)
JWT_SECRET=your_very_secure_jwt_secret_key_here_32plus_chars
JWT_EXPIRATION_HOURS=24

# Generate a 32-byte key for AES-256 encryption (REQUIRED)
# You can generate one with: openssl rand -hex 32 #866b4cfcf09ff8ac63a1e657b7d6e2a73d6f1c649b606f2a451571b225685e9b
ENCRYPTION_KEY=your_32_byte_encryption_key_in_hex_format  

# Session Configuration
SESSION_COOKIE_NAME=notifygate_session
SESSION_COOKIE_SECURE=false
CSRF_PROTECTION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=logs/notifygate.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true

# Queue Configuration
QUEUE_DRIVER=memory
REDIS_URL=redis://localhost:6379
QUEUE_WORKER_COUNT=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_BACKOFF_MIN=1
QUEUE_RETRY_BACKOFF_MAX=300

# Development settings
# Set LOG_LEVEL=debug for development
# Set SESSION_COOKIE_SECURE=false for local development without HTTPS